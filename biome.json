{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"experimentalScannerIgnores": [
			"**/apps/backend/.adonisjs/**/*",
			"**/apps/front/src/routeTree.gen.ts",
			"**/apps/front/src/components/ui/**/*",
			"**/coverage/**/*",
			"**/dist/**/*",
			"**/build/**/*",
			"**/node_modules/**/*",
			"**/playwright-report/**/*",
			"**/test-results/**/*"
		],
		"includes": ["**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
