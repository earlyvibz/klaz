{
	"name": "klaz-monorepo",
	"version": "0.0.0",
	"private": true,
	"description": "Monorepo for klaz project",
	"scripts": {
		"dev": "pnpm --parallel --recursive dev",
		"build": "pnpm --recursive build",
		"test": "pnpm --recursive test",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"clean": "pnpm --recursive clean",
		"docker:build:backend": "docker build -f apps/backend/Dockerfile -t klaz-backend .",
		"docker:build:frontend": "docker build -f apps/front/Dockerfile -t klaz-frontend .",
		"docker:build": "pnpm docker:build:backend && pnpm docker:build:frontend"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@types/node": "^24.0.14",
		"typescript": "^5.8.3"
	}
}
